<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg003"
    tools:context=".admin.UploadmenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/address_backbtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="104dp"
                android:text="Cash On delivery"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/cash_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:hint="Address"
                android:textColor="#000"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/cash_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="City"
                android:textColor="#000"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/cash_citycode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City code"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/cash_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone number"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:textSize="20sp"/>



        </LinearLayout>

        <Button
            android:id="@+id/add_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="callcon"
            android:layout_margin="25dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Confirm"
            android:textColor="@color/black" />
    </LinearLayout>

</ScrollView>